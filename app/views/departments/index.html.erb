<h1>
  List of all departments
</h1>

<hr>

<table class="table" border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
    </th>
  </tr>

  <% @departments.each do |department| %>
    <tr>
      <td>
        <%= department.id %>
      </td>

      <td>
        <%= department.name %>
      </td>

      <td>
        <a href="/departments/<%= department.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<hr>
