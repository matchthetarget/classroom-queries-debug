<h1>
  Department #<%= @department.id %> details
</h1>

<a href="/departments">
  Go back
</a>
</div>
</div>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= @department.name %>
  </dd>

  <dt>
    Number of courses
  </dt>
  <dd>
    <%= Course.where({ :department_id => @department.id }).count %>
  </dd>

</dl>

<hr>

<h2>Courses</h2>
<% courses = Course.where({ :department_id => @department.id }) %>
<ul>
  <% courses.each do |course| %>
    <li>
      <a href="/courses/<%= course.id %>"><%= course.title %></a>
    </li>
  <% end %>
</ul>
