<h1>
  List of all students
</h1>

<hr>

<table class="table" border="1" >
  <tr>
    <th>
      ID
    </th>

    <th>
      First name
    </th>

    <th>
      Last name
    </th>

    <th>
      Email
    </th>

    <th>
    </th>
  </tr>

  <% @students.each do |student| %>
    <tr>
      <td>
        <%= student.id %>
      </td>

      <td>
        <%= student.first_name %>
      </td>

      <td>
        <%= student.last_name %>
      </td>

      <td>
        <%= student.email %>
      </td>

      <td>
        <a href="/students/<%= student.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<hr>
